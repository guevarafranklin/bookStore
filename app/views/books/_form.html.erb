<%= turbo_frame_tag 'new_record_component' do %>
    <div class="flex w-full items-center">
        <div data-controller="form">
            <div class="flex w-ful items-center">
                <%= form_with(model: book, class: 'flex w-full items-center gap-2', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |form| %>
                    <% if book.errors.any? %>
                    <% book.errors.each do |error| %>
                        <span class="text-white"><%= error.full_message %></span>
                    <% end %>
                <% end %>
                    
                    <div class="flex gap-2 items-center">
                        <%= form.label :name, class: 'text-xs text-white font-semibold' %>
                        <%= form.text_field :name, class: 'w-full border-2 border-gray-300 p-1 rounded-lg' %>
                    </div>
                    <div class="flex gap-2 items-center">
                        <%= form.label :price, class: 'text-xs text-white font-semibold' %>
                        <%= form.number_field :price, in: 1.0..100.0, step: :any, class: 'w-full border-2 border-gray-300 p-1 rounded-lg' %>
                    </div>
                    <div class="flex items-center justify-end gap-2 ml-5">
                        <%= form.submit 'New Book', class: 'font-semibold p-1 bg-sky-600 text-sm text-white rounded' %>
                        <%= link_to 'Cancel', root_path, class: 'font-semibold p-1 bg-red-600 text-sm text-white rounded' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>