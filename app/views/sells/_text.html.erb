<div class="flex w-ful items-center">
            <%= form_with(model: sell, class: 'flex w-full items-center gap-2', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |form| %>
                <% if sell.errors.any? %>
                    <% sell.errors.each do |error| %>
                        <span class="text-white"><%= error.full_message %></span>
                    <% end %>
                <% end %>
                <div class="flex gap-2 items-center">
                    <%= form.label :book_id, 'Select Book', class: 'text-xs text-white font-semibold' %>
                    <%= form.select(:book_id, Book.all.collect{|book| [book.name, book.id]}, { include_blank: true }, class: 'w-full border-2 border-gray-300 p-1 rounded-lg') %>
                </div>
                <div class="flex gap-2 items-center">
                    <%= form.label :quantity, class: 'text-xs text-white font-semibold' %>
                    <%= form.number_field :quantity, class: 'w-full border-2 border-gray-300 p-1 rounded-lg' %>
                </div>
              
                <div class="flex items-center justify-end gap-2 ml-5">
                    <%= form.submit 'New Book', class: 'font-semibold p-1 bg-sky-600 text-sm text-white rounded' %>
                    <%= link_to 'Cancel', root_path, class: 'font-semibold p-1 bg-red-600 text-sm text-white rounded' %>
                </div>
            <% end %>
        </div>