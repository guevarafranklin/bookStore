<div data-controller="revenue" data-days-sells="<%= revenue_from_sells %>" id="revenue_chart">
    <canvas id="revenueSells"  style="width:100%;max-width:700px"></canvas>
    <div class="flex flex-col bg-white p-5 rounded mt-10 m-5">
        <h5 class="font-bold text-center my-5 text-xl"> Sells per book </h5>
        <table class="my-5">
            <div class="flex w-full">
                <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center">ID</div>
                <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center">Name</div>
                <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center">Revenue</div>
            </div>
    </div>
    <div class="flex flex-col">
        <% Book.all.each do |book| %>
        <div class="flex mt-2">
            <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center"> <%= book.id %></div>
            <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center"> <%= book.name %></div>
            <div class="w-1/3 flex items-center font-semibold boder-2 justify-center text-sm text-center"> $<%= book.sells.sum(:total).round(2) %></div>
        </div>
    <% end %>
    </div>
    </table>
    <div class="">
        <p class="font-bold text-center my-5 text-xl"> Total: </p>
        <p class="font-bold text-center my-2 text-xl"> $<%= Sell.all.sum(:total) %>
     </div>
  
</div>
